{% apply spaceless %}

{% if _type == 'search' %}
    {% set icon, label = 'fa-solid fa-magnifying-glass', _label|default(search) %}
{% else %}
    {% set icon, label = 'fa-solid fa-gear', _label|default(settings) %}
{% endif %}

{% set default_column_size = 'is-10-tablet is-10-desktop is-8-widescreen is-6-fullhd' %}

{% set wide_column_size = 'is-12-tablet is-12-desktop is-12-widescreen is-10-fullhd' %}

<div class="card">
    <div class="card-header">
        <div class="card-header-icon">
            <span class="icon is-medium">
                <i class="{{ icon }} fa-lg"></i>
            </span>
        </div>
        <div class="card-header-title">
            {{ label }}
        </div>
    </div>
    <div class="card-content">
        <div class="columns is-centered">
            <div class="column {{ _is_wide ? wide_column_size : default_column_size }}">

{% endapply %}
